<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns:l="sap.ui.layout" xmlns="sap.m" controllerName="com.erpx.site.prulia.PRULIA.controller.Main3"
	xmlns:html="http://www.w3.org/1999/xhtml">
	<Page showHeader="false" class="pruliaMain">
		<content>
			<l:VerticalLayout id="bannerLayout" width="100%" >
				<l:BlockLayout id="BlockLayout">
					<l:BlockLayoutRow >
						<l:BlockLayoutCell
								titleAlignment="Left"
								title="Together We Grow"
								class="startingImage startingText">
							<!--<Text text="Prudential Life Insurance Agency Association" class="startingText"/>-->
							<Button text="Learn More about PRULIA" type="Transparent" icon="sap-icon://navigation-right-arrow" iconFirst="false" press="handleAboutMessagePress"></Button>
						</l:BlockLayoutCell>
					</l:BlockLayoutRow>
				</l:BlockLayout>
			</l:VerticalLayout>
			<l:VerticalLayout id="contentLayout" class="mainContent" >
				<l:BlockLayout>
					<l:BlockLayoutRow>
						<l:BlockLayoutCell
								titleAlignment="Left"
								title="Latest News" 
								backgroundColorSet="ColorSet10" 
								backgroundColorShade="ShadeD">
							
							<HeaderContainer id="newsContainer" scrollStep="200" showDividers="false" content="{News>/}">
								<GenericTile
									backgroundImage="{News>image}"
									frameType="TwoByOne" press="handleAboutMessagePress" class="mainImageTile">
									<TileContent footer="{News>date}">
										<NewsContent
											contentText="{News>title}"/>
									</TileContent>
								</GenericTile>
							</HeaderContainer>
							<HBox width="100%" justifyContent="End">
								<Button icon="sap-icon://navigation-right-arrow" text="More News" type="Transparent" press="handleAboutMessagePress"></Button>
							</HBox>
							
						</l:BlockLayoutCell>
					</l:BlockLayoutRow>
					<l:BlockLayoutRow class="mainMenu">
						<l:BlockLayoutCell 
								backgroundColorSet="ColorSet11" 
								backgroundColorShade="ShadeD"
								class="sapUiNoContentPadding">
							<l:Grid defaultSpan="L4 M4 S6" class="sapUiNoContentPadding sapUiSmallMarginTop">
							<GenericTile
								frameType="OneByOne" press="handlePresidentMessagePress" headerImage="css/images/PresidentMessage.png" header="&#xA;" subheader="President's message">
							</GenericTile>
							<GenericTile
								frameType="OneByOne" press="handleCommitteePress" headerImage="css/images/Committee.png" header="&#xA;" subheader="Committee 2017-2019">
							</GenericTile>
							<GenericTile
								frameType="OneByOne" press="handleAboutPress" headerImage="css/images/About.png" header="&#xA;" subheader="About PRULIA">
							</GenericTile>
							<GenericTile
								frameType="OneByOne" press="handleMembershipPress" headerImage="css/images/Membership.png" header="&#xA;" subheader="Membership">
							</GenericTile>
							<GenericTile
								frameType="OneByOne" press="handlePhotoAlbumPress" headerImage="css/images/PhotoAlbum.png" header="&#xA;" subheader="Photo Album">
							</GenericTile>
							<GenericTile
								frameType="OneByOne" press="handleUsefulLinkPress" headerImage="css/images/UsefulLink.png" header="&#xA;" subheader="Useful Links">
							</GenericTile>
							<!---->
							<!--	<GenericTile-->
							<!--		backgroundImage="css/images/PresedentMessage1.png"-->
							<!--		frameType="TwoByOne" press="onPress">-->
							<!--		<TileContent footer="August 21, 2016">-->
							<!--			<NewsContent-->
							<!--				contentText="SAP Unveils Powerful New Player Comparision Tool Exclusively on NFL.com"-->
							<!--				subheader="Today, SAP News" />-->
							<!--		</TileContent>-->
							<!--	</GenericTile>-->
							</l:Grid>
						</l:BlockLayoutCell>
					</l:BlockLayoutRow>
					<l:BlockLayoutRow>
						<l:BlockLayoutCell 
								backgroundColorSet="ColorSet10" 
								backgroundColorShade="ShadeB"
								title="Contact Us">
							<Text text="Unit No. 531, 5th Floor, Block A, Lobby8,&#xA;Damansara Intan,&#xA;No. 1 JalanSS20/27,&#xA;47400 Petaling Jaya,&#xA;Selangor Darul Ehsan.&#xA;&#xA;Phone : 03-7727 6382&#xA;Fax   : 03-7727 6384&#xA;Email : prulia@yahoo.com" />
						</l:BlockLayoutCell>
						
						<l:BlockLayoutCell 
								backgroundColorSet="ColorSet10" 
								backgroundColorShade="ShadeB"
								class="sapUiNoContentPadding">
								<Image src="http://103.253.146.122/files/LocationMap.png" width="100%"/>
						</l:BlockLayoutCell>
					</l:BlockLayoutRow>
					<l:BlockLayoutRow>
						<l:BlockLayoutCell>
							<Text text="Copyright Â© 2018 Prudential Life Insurance Agency Association. All rights reserved."/>
						</l:BlockLayoutCell>
					</l:BlockLayoutRow>
				</l:BlockLayout>
			</l:VerticalLayout>
		</content>
	</Page>
</mvc:View>